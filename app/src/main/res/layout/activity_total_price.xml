<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/NavigationDrawer.DrawerLayout"
    tools:context="cn.kavelcortex.bookpriceculculator.TotalPrice"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:elevation="4dp"
            style="@style/Toolbar" />
        <include layout="@layout/receipt_frame"/>
    </LinearLayout>

    <android.support.design.internal.ScrimInsetsFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/NavigationDrawer.NavigationView.FromStart">

        <include layout="@layout/book_picker_frame"  />
    </android.support.design.internal.ScrimInsetsFrameLayout>
</android.support.v4.widget.DrawerLayout>
