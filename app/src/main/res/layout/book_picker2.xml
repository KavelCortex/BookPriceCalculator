                    android:id="@+id/cb8"
                    android:checked="false"
                    android:background="@drawable/circle_button" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="@string/book12"
                    android:textOn="@string/book12"
                    android:id="@+id/cb12"
                    android:checked="false"
                    android:background="@drawable/circle_button"/>

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="@string/book16"
                    android:textOn="@string/book16"
                    android:id="@+id/cb16"
                    android:checked="false"
                    android:background="@drawable/circle_button" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="@string/book20"
                    android:textOn="@string/book20"
                    android:id="@+id/cb20"
                    android:checked="false"
